#include <iostream>
#include <string>
using namespace std;

void greeting()
{
   cout << "hello there\n";
}

// fname and lname are formal parameters
// names of actual and formal parameters don't need to match
//    must have the same number and order determines what's what
//    and the types must match
void greeting2(string fname, string lname)
{
   cout << "hello there " << fname << ' ' << lname << endl;
}

int main()
{
   greeting();
   greeting();
   greeting();
   greeting2("Dan", "Brekke"); // actual parameters
   greeting2("John","Doe"); // actual parameters
   return 0;
}
